<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acmecompany">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AcmeCompanyKotlin">

        <activity
            android:name=".ui.view.LoginActivity"
            android:label="@string/activity_title_login"
            android:configChanges="orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.view.MainActivity"
            android:label="@string/activity_title_main"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".ui.view.MapsActivity"
            android:label="@string/activity_title_maps"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".ui.view.WorkTicketActivity"
            android:configChanges="orientation|screenSize" />

    </application>

</manifest>